{
    "manifest_version": 3,
    "name": "Backlog Comment Sorter",
    "version": "2.0",
    "description": "Backlogの課題ページにコメントのソート切り替えボタンを自動で追加します。",
    "permissions": [
        "storage",
        "tabs",
        "webNavigation"
    ],
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "action": {
        "default_popup": "src/ui/popup/popup.html",
        "default_title": "Backlog Comment Sorter",
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        }
    },
    "background": {
        "service_worker": "src/scripts/background.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.backlog.com/*",
                "https://*.backlog.jp/*"
            ],
            "js": [
                "src/scripts/content.tsx"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ]
}